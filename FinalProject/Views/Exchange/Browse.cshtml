@model FinalProject.Models.Category

@{
    ViewBag.Title = "Browse";
}

<h2>Browse Tickets</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>Event</td>
            <td>Location</td>
            <td>Date</td>
            <td>Category</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.tickets)
        {
            <tr>
                <td>@ticket.eventName</td>
                <td>@ticket.location</td>
                <td>@ticket.date.ToString("M/d/yyyy h:mm tt")</td>
                <td>@ticket.category.name</td>
                <td>@Html.ActionLink("View", "Details", new { id = ticket.ticketId }, new { @class = "btn btn-success btn-sm" })</td>
            </tr>
        }
    </tbody>
</table>
