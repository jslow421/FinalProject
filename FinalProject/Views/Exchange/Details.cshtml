@model FinalProject.Models.Ticket

@{
    ViewBag.Title = "Details";
}

<h2>Ticket Details</h2>

<ul>
    <li>Event: @Model.eventName</li>
    <li>Date: @Model.date.ToString("M/d/yyyy")</li>
    <li>Time: @Model.time.ToString("h:mm tt")</li>
    <li>Location: @Model.location</li>
    <li>Trade Type: @Model.tradeType</li>
    <li>User: @Model.user</li>
</ul>

@{
    if (@ViewBag.status)
    {
        <form method="GET" id="ticket" name="ticket">
            @Html.ActionLink("Trade", "Ticket", new { id = @Model.ticketId }, new { @class = "btn btn-danger" })
        </form>
    }
    else
    {
        
    <div class="alert alert-warning" role="alert"><p><strong><a href="~/Account/Login">
    Login</a></strong> or <strong><a href="~/Account/Register">register</a></strong> to trade tickets
</p>
    </div>

    }
}



