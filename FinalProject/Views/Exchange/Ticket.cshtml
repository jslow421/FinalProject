@model IEnumerable<FinalProject.Models.Ticket>

@{
    ViewBag.Title = "Your Tickets";
}

<h2>Trade Options</h2>
<p>Choose a ticket you would like to trade for: @ViewBag.ticket.eventName on @ViewBag.Ticket.date</p>
<form method="POST" action="/Exchange/Trade/@ViewBag.ticket.ticketId" id="trade" name="trade">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Location</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.eventName</td>
                    <td>@t.location</td>
                    <td>@t.date</td>
                    <td>@t.time</td>
                    <td><button type="button" id="tradeTicket" name="tradeTicket" class="btn btn-success btn-sm" value="@t.ticketId">Select</button>
                </tr>
            }
        </tbody>
    </table>
</form>

<div id="dialog" title="Confirm Trade">Confirm trade</div>

@section Scripts{
    <script src="~/Scripts/jquery-ui.min.js"></script>
}